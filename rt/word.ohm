Word {
  input = item+
  item =
    | space -- space
    | separator -- separator
    | string -- string
    | word -- word

  word = legalchar+
  legalchar = ~separator ~space any

  separator = "(" | ")" | "//" | extraSeparator
  comment = "//" (~"\n" any)* "\n"
  space += comment
  string = dq (~dq any)* dq
  dq = "\""

  extraSeparator = ";" | ":" | "{" | "}" | "->" | ","
}
