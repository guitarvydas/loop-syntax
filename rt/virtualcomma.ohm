VirtualComma {
  input = item+
  item =
    | space -- space
    | separator -- separator
    | any &space -- needsVcomma
    | any &separator -- needsVcommaSeparator
    | any -- any
  separator = "(" | ")" | "//" | higherLevelSeparator
  comment = "//" (~"\n" any)* "\n"
  space += comment

  higherLevelSeparator = ";" | ":" | "{" | "}" | "->"
}
